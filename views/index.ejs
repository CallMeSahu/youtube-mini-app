<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube Mini-App</title>
</head>

<body>
    <h1 id="video-title">
        <%= video.snippet.title %>
    </h1>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= video.id %>" frameborder="0"></iframe>

    <h2>Change Video Title</h2>
    <form id="title-form" action="/video/title" method="POST">
        <input type="text" id="new-title" name="newTitle" required>
        <button type="submit">Update Title</button>
    </form>

    <h2>Comments</h2>
    <form action="/comment" method="POST">
        <input type="text" name="username" placeholder="Your name" required>
        <textarea name="text" placeholder="Write a comment..." required></textarea>
        <button type="submit">Add Comment</button>
    </form>

    <ul>
        <% comments.forEach(comment=> { %>
            <li>
                <strong>
                    <%= comment.username %>:
                </strong>
                <%= comment.text %>
                    <form action="/comment/<%= comment._id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form>
            </li>
            <% }) %>
    </ul>

    <script>
        let currentTitle = "<%= video.snippet.title %>";

        document.getElementById("title-form").addEventListener("submit", function (event) {
            event.preventDefault();
            let newTitle = document.getElementById("new-title").value;

            if (newTitle.trim() !== "") {
                document.getElementById("video-title").textContent = newTitle;
                currentTitle = newTitle;

                fetch("/video/title", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/x-www-form-urlencoded",
                    },
                    body: `newTitle=${encodeURIComponent(newTitle)}`
                }).then(response => {
                    console.log("Title updated successfully!");
                }).catch(error => {
                    console.error("Error updating title:", error);
                });
            }
        });
    </script>
</body>

</html>